<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="55dp">

        <ImageView
            android:id="@+id/fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/fechaatras"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="ACERCA DE"
            android:textColor="#1E1E1E"
            android:textStyle="bold"
            android:textSize="18dp"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/logo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Truyki App v.0.01"
            android:textColor="#0C0C0C"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="2dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/usuario" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desarrollado por:"
                    android:textColor="#0C0C0C"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alumnos de 5to ciclo de la carrera de Computación e Informática del Instituto CIBERTEC"
                    android:textColor="#0C0C0C"
                    android:layout_marginTop="10dp"
                    android:textSize="19dp"/>

            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/web" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="www.truyki.com"
                android:textColor="#0C0C0C"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="33dp"
                android:textSize="20dp"/>
        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/correo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="info@truyki.com"
                android:textColor="#0C0C0C"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="33dp"
                android:textSize="20dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/telefono" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="+51 987654321"
                android:textColor="#0C0C0C"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="33dp"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>