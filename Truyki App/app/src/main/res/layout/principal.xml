<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/combox"
            android:layout_width="325dp"
            android:layout_height="43dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/borde"
            app:drawableStartCompat="@drawable/bucar"
            android:clickable="false"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/buscar"
            android:layout_width="326dp"
            android:layout_height="47dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/borde_radios"
            android:drawablePadding="1500px"
            android:lineHeight="1dp"
            app:drawableStartCompat="@drawable/bucar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:divider="@drawable/notificacion"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="387dp"
            android:layout_height="340dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:clipToPadding="true"
            android:orientation="vertical"
            app:contentPadding="5dp">

            <ImageView
                android:id="@+id/imageCat1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/notificacion" />

            <TextView
                android:id="@+id/cat1"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="120dp"
                android:text="Categoría 1" />

            <ImageView
                android:id="@+id/imageCat2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/web" />

            <TextView
                android:id="@+id/cat2"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="277dp"
                android:layout_marginTop="120dp"
                android:text="Categoría 3" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/correo" />

            <TextView
                android:id="@+id/cat3"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="149dp"
                android:layout_marginTop="120dp"
                android:text="Categoría 2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="175dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/impresora" />

            <TextView
                android:id="@+id/cat4"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="280dp"
                android:text="Categoría 3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="175dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/casa" />

            <TextView
                android:id="@+id/cat5"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="280dp"
                android:text="Categoría 4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="175dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pintura"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/cat6"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="280dp"
                android:text="Categoría 6" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>